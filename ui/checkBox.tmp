<?xml version="1.0"?>
<Border Margin="0" Foreground="Transparent" Background="{./Background}" MouseEnter="{Foreground=White}" MouseLeave="{Foreground=Transparent}"
		Height="Stretched" Width="Stretched">
	<Group Margin="1">
		<Label Margin="3" Font="{./Font}" Foreground="{./Foreground}" Text="{./Caption}"/>
		<Widget Background="0.1,0.3,0.9,0.3" Visible="{./IsChecked}"/>
	</Group>
</Border>
