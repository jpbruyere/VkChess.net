<?xml version="1.0"?>
<Group Background="DarkGrey" >
	<Gauge Height="50%" Foreground="${ControlHighlight}" Background="Onyx" Value="{./Value}" Maximum="{./Maximum}" Minimum="{Minimum}" Orientation="{./Orientation}"/>
	<Border Name="Cursor" Background="White" BorderWidth="3" Foreground="Grey" MouseEnter="{Foreground=${ControlHighlight}}" MouseLeave="{Foreground=Grey}" >
		<Label Text="{./Value}" Foreground="Black"/>
	</Border>
</Group>
