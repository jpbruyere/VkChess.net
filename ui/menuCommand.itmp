<?xml version="1.0"?>
<Button Command="{}" Width="Stretched" Height="Stretched">
	<Template>
		<HorizontalStack Width="Stretched" Height="Stretched" Margin="5" Spacing="5"
						MouseEnter="{Background=${ControlHighlight}}"
						MouseLeave="{Background=Transparent}">
			<Image Style="icon" Path="{./Icon}"/>
			<Label Text="{./Caption}" HorizontalAlignment="Left" Margin="5"/>
		</HorizontalStack>
	</Template>
</Button>
